@model Recipe
@{
    ViewData["Title"] = "Our RECIPESS";
    string[] IngredientsArray = Model.Ingredients.Split("，︀");
}

<head>
    <script src="~/js/fetchAPI.js"></script>
</head>

<body>
    <div class="container">
        <h1>@Model.Mealname</h1>

        <div class="row">
            <div class="col-md-6">
                <h3>Category</h3>
                <p>@Model.Category</p>
            </div>
            <div class="col-md-6">
                <h3>Area</h3>
                <p>@Model.Area</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h3>Instructions</h3>
                <p>@Model.Instructions</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <h3>Ingredients</h3>
                <ul>
                    @for (int i = 0; i < IngredientsArray.Length; i++)
                    {
                        @if (IngredientsArray[i] == "") break;
                        <li>
                                <p>@IngredientsArray[i]</p>
                        </li>
                    }

                </ul>
            </div>
            <div class="col-md-6">
                <img src="@Model.MealPNG" alt="@Model.Mealname"/>
            </div>
        </div>
    </div>

</body>


